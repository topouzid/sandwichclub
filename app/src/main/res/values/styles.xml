<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--Style for the headings of DetailActivity-->
    <style name="SandwichInfoTitleTheme">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">@dimen/text_size_main</item>
        <item name="android:paddingTop">@dimen/title_margin_top</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginLeft">@dimen/text_left_margin</item>
    </style>

    <!--Style for text info of DetailActivity-->
    <style name="SandwichInfoDetailsTheme">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">@dimen/text_size_main</item>
        <item name="android:layout_marginLeft">@dimen/text_left_margin</item>
    </style>

</resources>
